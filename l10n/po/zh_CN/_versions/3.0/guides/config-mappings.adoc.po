#: upstream/_versions/3.0/guides/config-mappings.adoc:449
#, no-wrap
msgid ""
"@ConfigMapping(prefix = \"server\")\n"
"interface Server {\n"
"    @Size(min = 2, max = 20)\n"
"    String host();\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/3.0/guides/config-mappings.adoc:453
#, no-wrap
msgid ""
"    @Max(10000)\n"
"    int port();\n"
"}\n"
