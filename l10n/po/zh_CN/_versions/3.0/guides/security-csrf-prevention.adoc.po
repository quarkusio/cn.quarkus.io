#. type: delimited block -
#: upstream/_versions/3.0/guides/security-csrf-prevention.adoc:177
#, no-wrap
msgid ""
"    <1>\n"
"    @POST\n"
"    @Path(\"/user\")\n"
"    @Consumes(MediaType.APPLICATION_FORM_URLENCODED)\n"
"    @Produces(MediaType.TEXT_PLAIN)\n"
"    public String postCsrfTokenForm(@FormParam(\"name\") String userName) {\n"
"        return userName;\n"
"    }\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/3.0/guides/security-csrf-prevention.adoc:186
#, no-wrap
msgid ""
"    <2>\n"
"    @POST\n"
"    @Path(\"/user\")\n"
"    @Consumes(MediaType.APPLICATION_JSON)\n"
"    @Produces(MediaType.TEXT_PLAIN)\n"
"    public String postJson(User user) {\n"
"        return user.name;\n"
"    }\n"
msgstr ""

#. type: delimited block -
