#. type: delimited block -
#: upstream/_versions/2.7/guides/security-openid-connect-web-authentication.adoc:85
#: upstream/_versions/2.7/guides/security-openid-connect-web-authentication.adoc:477
#, no-wrap
msgid ""
"import javax.inject.Inject;\n"
"import javax.ws.rs.GET;\n"
"import javax.ws.rs.Path;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.7/guides/security-openid-connect-web-authentication.adoc:87
#, no-wrap
msgid "import org.eclipse.microprofile.jwt.JsonWebToken;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.7/guides/security-openid-connect-web-authentication.adoc:90
