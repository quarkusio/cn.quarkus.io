#. type: delimited block -
#: upstream/_versions/2.7/guides/datasource.adoc:467
#, no-wrap
msgid ""
"@Inject\n"
"@DataSource(\"users\")\n"
"AgroalDataSource usersDataSource;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.7/guides/datasource.adoc:471
#, no-wrap
msgid ""
"@Inject\n"
"@DataSource(\"inventory\")\n"
"AgroalDataSource inventoryDataSource;\n"
