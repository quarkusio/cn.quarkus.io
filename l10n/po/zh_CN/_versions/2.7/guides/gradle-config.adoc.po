msgid "Gradle Plugin Repositories"
msgstr ""

#.  tag::repositories[]
#. type: Plain text
#: upstream/_versions/2.7/guides/gradle-config.adoc:12
msgid "The Quarkus Gradle plugin is published to the https://plugins.gradle.org/plugin/io.quarkus[Gradle Plugin Portal]."
msgstr ""

#. type: Plain text
#: upstream/_versions/2.7/guides/gradle-config.adoc:14
msgid "To use it, add the following to your `build.gradle` file:"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.7/guides/gradle-config.adoc:21
#, no-wrap
msgid ""
"plugins {\n"
"    id 'java'\n"
"    id 'io.quarkus'\n"
"}\n"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.7/guides/gradle-config.adoc:24
msgid "You also need to add the following at the top of your `settings.gradle` file:"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.7/guides/gradle-config.adoc:35
#, no-wrap
msgid ""
"pluginManagement {\n"
"    repositories {\n"
"        mavenCentral()\n"
"        gradlePluginPortal()\n"
"    }\n"
"    plugins {\n"
"      id 'io.quarkus' version \"${quarkusPluginVersion}\"\n"
"    }\n"
"}\n"
msgstr ""

#. type: Labeled list
#: upstream/_versions/2.7/guides/gradle-config.adoc:37
#, no-wrap
msgid "NOTE"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.7/guides/gradle-config.adoc:38
msgid "the `plugins{}` method in `settings.gradle` is not supported in Gradle 5.x. In this case make sure to explicitly declare the plugin version in the `build.gradle` file like the example below:"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.7/guides/gradle-config.adoc:45
#, no-wrap
msgid ""
"plugins {\n"
"    id 'java'\n"
"    id 'io.quarkus' version '{quarkus-version}'\n"
"}\n"
msgstr ""
