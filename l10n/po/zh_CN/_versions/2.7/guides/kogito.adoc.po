#, no-wrap
msgid ""
"\tpublic int getAge() {\n"
"\t\treturn age;\n"
"\t}\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.7/guides/kogito.adoc:143
#, no-wrap
msgid ""
"\tpublic void setAge(int age) {\n"
"\t\tthis.age = age;\n"
"\t}\n"
