#, no-wrap
msgid ""
"    fun greeting(name: String): String {\n"
"        return \"hello $name\"\n"
"    }\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/kotlin.adoc:422
#, no-wrap
msgid ""
"@Path(\"/\")\n"
"class GreetingResource {\n"
msgstr ""

