#, no-wrap
msgid "./mvnw quarkus:add-extension -Dextensions=\"elytron-security-jdbc\"\n"
msgstr ""

#. type: Plain text
#: upstream/_versions/2.2/guides/security-jdbc.adoc:74
msgid "This will add the following to your `pom.xml`:"
msgstr ""

#. type: delimited block -
#: upstream/_versions/2.2/guides/security-jdbc.adoc:81
#, no-wrap
