#. type: delimited block -
#: upstream/_versions/main/guides/security-openid-connect-providers.adoc:617
#, no-wrap
msgid ""
"    @Inject\n"
"    @RestClient\n"
"    GoogleCalendarClient calendarClient;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/security-openid-connect-providers.adoc:626
#, no-wrap
msgid ""
"    @GET\n"
"    @Path(\"/event\")\n"
"    @Produces(\"text/plain\")\n"
"    public Uni<String> get() {\n"
"        return calendarClient.addEvent(new Event()).onItem()\n"
"           .transform(c -> (\"Hello \" + jwt.getName() + \", new event: \" + c));\n"
"    }\n"
"}\n"
msgstr ""

#. type: Plain text
#: upstream/_versions/main/guides/security-openid-connect-providers.adoc:629
