#. type: delimited block -
#: upstream/_versions/main/guides/security-openid-connect-providers.adoc:609
#, no-wrap
msgid ""
"@Path(\"/calendar\")\n"
"@Authenticated\n"
"public class CalendarService {\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/security-openid-connect-providers.adoc:613
#, no-wrap
msgid ""
"    @Inject\n"
"    @IdToken\n"
"    JsonWebToken jwt;\n"
