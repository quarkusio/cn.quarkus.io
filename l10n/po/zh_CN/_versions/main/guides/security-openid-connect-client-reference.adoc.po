#. type: delimited block -
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:243
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:270
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:301
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:339
#, no-wrap
msgid ""
"import jakarta.inject.Inject;\n"
"import jakarta.ws.rs.GET;\n"
"import jakarta.ws.rs.Path;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:246
#, no-wrap
msgid ""
"import io.quarkus.oidc.client.OidcClient;\n"
"import io.quarkus.oidc.client.OidcClients;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:249
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:277
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:310
#: upstream/_versions/main/guides/security-openid-connect-client-reference.adoc:342
#, no-wrap
msgid ""
"@Path(\"/clients\")\n"
"public class OidcClientResource {\n"
