"    public String name;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/security-jpa.adoc:104
#, no-wrap
msgid ""
"    @Password\n"
"    public String pass;\n"
msgstr ""

#. type: delimited block -
#: upstream/_versions/main/guides/security-jpa.adoc:109
#, no-wrap
