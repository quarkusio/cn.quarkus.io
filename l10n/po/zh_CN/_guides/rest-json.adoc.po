"    }\n"
msgstr ""

#. type: delimited block -
#: upstream/_guides/rest-json.adoc:445
#, no-wrap
msgid ""
"    @GET\n"
"    public Response list() {\n"
"        return Response.ok(legumes).build();\n"
"    }\n"
"}\n"
msgstr ""

